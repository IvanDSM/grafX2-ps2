    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build grafX2-ps2",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Rebuild grafX2-ps2",
            "type": "shell",
            "command": "make clean && make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean grafX2-ps2",
            "type": "shell",
            "command": "make clean"
        }
    ]
}